<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FoodFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textView7"
        android:layout_width="166dp"
        android:layout_height="82dp"
        android:gravity="center"
        android:text="Food"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="98dp"
        android:layout_margin="20dp"
        android:layout_marginTop="104dp"
        android:orientation="vertical"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:id="@+id/card1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="119dp"
                android:layout_height="100dp"
                android:src="@drawable/pizza" />

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Pizza"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="266 kcal"
                    android:textSize="20sp" />

            </LinearLayout>

            <View
                android:id="@+id/arrow1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="35dp"
                android:background="@drawable/baseline_arrow_forward_ios_24">
            </View>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="98dp"
        android:layout_margin="20dp"
        android:layout_marginTop="104dp"
        android:orientation="vertical"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card1"
        android:id="@+id/card2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="119dp"
                android:layout_height="100dp"
                android:src="@drawable/pancake" />

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Pancake"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="227 kcal"
                    android:textSize="20sp" />

            </LinearLayout>

            <View
                android:id="@+id/arrow2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="35dp"
                android:background="@drawable/baseline_arrow_forward_ios_24">
            </View>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="98dp"
        android:layout_margin="20dp"
        android:layout_marginTop="104dp"
        android:orientation="vertical"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card2"
        android:id="@+id/card3">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="119dp"
                android:layout_height="100dp"
                android:src="@drawable/fries" />

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="French fries"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="311 kcal"
                    android:textSize="20sp" />

            </LinearLayout>

            <View
                android:id="@+id/arrow3"
                android:layout_width="30dp"
                android:layout_height="30dp"
